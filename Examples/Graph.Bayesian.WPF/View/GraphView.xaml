<rui:ReactiveUserControl 
    x:TypeArguments="models:Graph" 
    x:Class="Graph.Bayesian.WPF.View.GraphView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:rui="http://reactiveui.net"           
    xmlns:graphx="http://schemas.panthernet.ru/graphx/" 
    xmlns:controls="clr-namespace:Graph.Bayesian.WPF.Controls"
    xmlns:models="clr-namespace:Graph.Bayesian.WPF.Models"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <graphx:ZoomControl x:Name="MainZoomControl">
            <controls:GraphArea x:Name="MainGraphArea"/>
        </graphx:ZoomControl>
        <TextBlock x:Name="ErrorTextBlock" VerticalAlignment="Center" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="Graph" VerticalAlignment="Bottom" HorizontalAlignment="Left"></TextBlock>
    </Grid>

</rui:ReactiveUserControl>
