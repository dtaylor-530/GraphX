<UserControl x:Class="Graph.Bayesian.WPF.View.ModelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Graph.Bayesian.WPF.Controls"
             xmlns:graphx="http://schemas.panthernet.ru/graphx/"
             xmlns:models="clr-namespace:Graph.Bayesian.WPF.Models"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <FrameworkElement.Resources>

        <Style TargetType="Button"  BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="PeachPuff" ></Setter>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=IsSelected}"
                             Value="True">
                    <Setter Property="Background" Value="LightPink" />
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </FrameworkElement.Resources>

    <Grid Background="LightBlue" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <graphx:ZoomControl x:Name="zoomctrl">
            <local:GraphArea x:Name="Area"/>
        </graphx:ZoomControl>
    </Grid>

</UserControl>
